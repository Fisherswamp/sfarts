{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"types": ["jest", "node"],
		"paths": {
			"*": [
				"node_modules/",
				"src/types/*"
			]
		},
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	]
  }