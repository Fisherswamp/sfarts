{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "serverDist",
        "baseUrl": ".",
        "types": ["jest", "node"],
        "paths": {
            "*": ["node_modules/", "src/types/*"]
        },
        "jsx": "react"
    },
    "include": ["src/**/*", "tests/**/*"]
}
